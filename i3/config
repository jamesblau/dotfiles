bindsym --release $mod+Control+j exec --no-startup-id "xdotool key --clearmodifiers Down"
bindsym --release $mod+Control+k exec --no-startup-id "xdotool key --clearmodifiers Up"
bindsym --release $mod+Control+l exec --no-startup-id "xdotool key --clearmodifiers Right"

