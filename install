#!/bin/bash -x

cd ~
for i in `ls ~/dotfiles | grep -v "install\|bin\|bets\|i3_config\|bash_ni"`; do
  ln -s ~/dotfiles/"$i" ."$i"
done
ln -s .vimrc .nvimrc
ln -s .vimrc.bundles .nvimrc.bundles

mkdir -p ~/.i3
cd ~/.i3
ln -s ~/dotfiles/i3_config config

mkdir -p ~/bin
cd ~/bin
for i in `ls ~/dotfiles/bin`; do
  ln -s ~/dotfiles/bin/"$i" "$i"
done
