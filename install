#!/bin/bash -x

cd ~
LIST=( agignore bash_prompt bashrc gitconfig i3 i3status.conf inputrc nvimrc pythonrc.py tmux.conf vimrc vimrc.bundles )
for x in "${LIST[@]}"; do
  [[ -L "$x" ]] || ln -s ~/dotfiles/"$x" ."$x"
done

mkdir -p ~/bin
cd ~/bin
for x in `ls ~/dotfiles/bin`; do
  ln -s ~/dotfiles/bin/"$x" "$x"
done
