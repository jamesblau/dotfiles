function! NextTWorB()
  " if (tabpagenr("$") == 1) && (winnr("$") == 1)
    " bn
  " elseif (tabpagenr("$") == 1)
    " wincmd w
  if (tabpagenr("$") == 1)
    bn
  else
    tabn
  endif
endfunction
function! PrevTWorB()
  " if (tabpagenr("$") == 1) && (winnr("$") == 1)
    " bp
  " elseif (tabpagenr("$") == 1)
    " wincmd W
  if (tabpagenr("$") == 1)
    bp
  else
    tabp
  endif
endfunction
function! NumTorB(number)
  if (tabpagenr("$") == 1)
    execute ":b" . a:number
  else
    execute ":tabn" . a:number
  endif
endfunction

