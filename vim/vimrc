function! MouseToggle()
  if(&mouse == '')
    set mouse=nv
    unmap <Up>
    unmap <Down>
  else
    set mouse=
    map <Up> <F18>
    map <Down> <F18>
  endif
endfunction

function! TabSpaces()
  let l:char=nr2char(getchar())
  if(l:char == 'r')
    execute ":retab"
  else
    let l:num=l:char+0
    setl expandtab
    let &l:sw=l:num
    let &l:ts=l:num
    let &l:sts=l:num
  endif
endfunction

function! RegisterFromUnnamed()
  let l:char=nr2char(getchar())
  execute ":let @" . l:char . "=@\""
endfunction

function! UnnamedFromRegister()
  let l:char=nr2char(getchar())
  execute ":let @\"=@" . l:char
endfunction

