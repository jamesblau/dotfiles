[user]
  name = James Blau
  email = jamesblau@gmail.com
[diff]
  tool = nvimdiff
[difftool]
  prompt = false
  trustExitCode = true
[merge]
  tool = nvimmerge
[difftool "nvimdiff"]
  cmd = ~/bin/myvim -d $LOCAL $REMOTE +'nnoremap CQ :cq<CR>' -c '$wincmd w'
[mergetool "nvimmerge"]
  cmd = ~/bin/myvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool]
  prompt = false
  keepBackup = false
[alias]
  aa = add --all
  d = difftool
  ds = difftool --staged
  m = mergetool
  s = status
  st = "!git --no-pager stash"
  br = "!git --no-pager branch"
[push]
  default = current
[credential]
  helper = store
