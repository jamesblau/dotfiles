[user]
	name = James Blau
	email = james@tresata.com
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
[merge]
	tool = nvimmerge
[difftool "nvimdiff"]
  cmd = ~/bin/myvim -d $LOCAL $REMOTE -c '$wincmd w'
[mergetool "nvimmerge"]
  cmd = ~/bin/myvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool]
	prompt = false
	keepBackup = false
[alias]
	aa = add --all
	d = difftool
	ds = difftool --staged
	m = mergetool
	s = status
[push]
	default = current
