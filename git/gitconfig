[user]
	name = James Blau
	email = james@tresata.com
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE -c '$wincmd w'
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool]
	prompt = false
	keepBackup = false
[alias]
	d = difftool
	m = mergetool
[push]
	default = current
