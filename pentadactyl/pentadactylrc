" vim: sw=2 ts=2 sts=2 expandtab ft=vim
map ,R :source ~/.vimperatorrc<CR>

set hintchars=ifjklasdweuocvbnm
highlight Hint font: bold 15px "Droid Sans Mono", monospace !important; margin: -.2ex; padding: 0 0 0 1px; outline: 1px solid rgba(0, 0, 0, .5); background: rgba(255, 248, 231, .8); color: black;

set guioptions=Cs
map ,b :set guioptions=Cs<CR>
map ,B :set guioptions=BmT<CR>

map ,/ /☃☃☃<CR><Esc>

set! mousewheel.with_control.action=0

noremap j 10<C-e>
noremap k 10<C-y>

noremap J gT
noremap K gt

noremap ,u :undo<Space>

map <C-j> :tabmove! -1<CR>
map <C-k> :tabmove! +1<CR>

cmap <C-n> <Down>
cmap <C-p> <Up>

set defsearch=g_s

map ,g :open<space>g_s<space>
map ,G :tabopen<space>g_s<space>
map ,d :open<space>d_s<space>
map ,D :tabopen<space>d_s<space>
map ,w :open<space>w_s<space>
map ,W :tabopen<space>w_s<space>

map ,r :open<space>reddit.com<CR>
map ,R :tabopen<space>reddit.com<CR>
map ,s :open<space>reddit.com/r/ssbpm<CR>
map ,S :tabopen<space>reddit.com/r/ssbpm<CR>
map ,u :open<space>reddit.com/message/unread<CR>
map ,U :tabopen<space>reddit.com/message/unread<CR>
map ,m :open<space>gmail.com<CR>
map ,M :tabopen<space>gmail.com<CR>
map ,c :tabopen<space>nedroid.com/<CR>:tabopen<space>scarygoround.com/<CR>:tabopen<space>xkcd.com/<CR>:tabopen<space>smbc-comics.com/<CR>:tabopen<space>penny-arcade.com/comic<CR>:tabopen<space>harkavagrant.com/<CR>JJJJJ

" Hack: refocus on "Save" button in Reddit before hitting enter
nnoremap <C-CR> <Tab><S-Tab><CR>

nnoremap <C-l> yo<C-v>
nnoremap <C-z> <A-v><A-z><A-t>

nnoremap <C-Q> <Nop>
nnoremap r <C-R>
nnoremap d <C-W>
