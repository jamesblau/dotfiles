" vim: sw=2 ts=2 sts=2 expandtab ft=vim
map ,R :source ~/.vimperatorrc<CR>

set hintchars=ifjklasdweuocvbnm
highlight Hint font-family: monospace; font-size: 15px; font-weight: bold; text-transform: uppercase; color: white; background-color: red; border-color: ButtonShadow; border-width: 0px; border-style: solid; padding: 0px 1px 0px 1px;
"highlight Hint z-index:5000; font-family:monospace; font-size:15px; color:white; background-color:blue; border-color:ButtonShadow; border-width:0px; border-style:solid; padding:0px 1px 0px 1px; position:absolute; text-transform: uppercase;
hi CompGroup -append font-size:10px
hi CompGroup:not -append font-size:10px
hi CompDesc -append font-size:10px
hi CmdLine -append font-size:10px
hi CompIcon -append font-size:10px
hi CompItem -append font-size:10px
hi CompMsg -append font-size:10px
hi CompResult -append font-size:10px
hi CompTitle -append font-size:10px

set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs
map ,b :set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs<CR>
map ,B :set gui=all<CR>

set editor="gnome-terminal --disable-factory -x vim"

map ,/ /☃☃☃<CR><Esc>

set! mousewheel.with_control.action=0

set urlseparator=

noremap j 10<C-e>
noremap k 10<C-y>

noremap J gT
noremap K gt

noremap ,u :undo<Space>

map <C-j> :tabmove! -1<CR>
map <C-k> :tabmove! +1<CR>

cmap <C-n> <Down>
cmap <C-p> <Up>

map W :winopen<Space>

set defsearch=google_search

map ,g :open<space>google_search<space>
map ,G :tabopen<space>google_search<space>
map ,d :open<space>duckduckgo_search<space>
map ,D :tabopen<space>duckduckgo_search<space>
map ,w :open<space>wikipedia_search<space>
map ,W :tabopen<space>wikipedia_search<space>

map ,r :open<space>reddit.com<CR>
map ,R :tabopen<space>reddit.com<CR>
map ,s :open<space>reddit.com/r/ssbpm<CR>
map ,S :tabopen<space>reddit.com/r/ssbpm<CR>
map ,u :open<space>reddit.com/message/unread<CR>
map ,U :tabopen<space>reddit.com/message/unread<CR>
map ,m :open<space>gmail.com<CR>
map ,M :tabopen<space>gmail.com<CR>
map ,c :tabopen<space>nedroid.com/<CR>:tabopen<space>scarygoround.com/<CR>:tabopen<space>xkcd.com/<CR>:tabopen<space>smbc-comics.com/<CR>:tabopen<space>penny-arcade.com/comic<CR>:tabopen<space>harkavagrant.com/<CR>:tabopen<space>octopuspie.com/<CR>JJJJJJ

" Hack: refocus on "Save" button in Reddit before hitting enter
nnoremap <C-CR> <Tab><S-Tab><CR>

nnoremap <C-l> yo<C-v>
nnoremap <C-z> <A-v><A-z><A-t>

" Don't open native search bar
cmap <C-F> <Nop>
cmap <S-C-G> <Nop>
imap <C-F> <Nop>
imap <C-G> <Nop>
map ,<C-G> <Nop>

" Don't repeat things...
map . <Nop>

" Doesn't work by default; cancel page loading
nmap <C-c> :st<CR>

" Other stuff
nnoremap <C-Q> <Nop>
nnoremap gr <Nop>
