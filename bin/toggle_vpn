#!/bin/bash

if openvpn3 sessions-list | grep -v "No sessions available" > /dev/null; then
  if [[ $1 == "on" ]]; then
    exit
  else
    openvpn3 session-manage --disconnect --config ~/.ovpn/amaryllis_james@nearamericas.openvpn.com.ovpn
    rm -f ~/.openvpn_pid
  fi
elif [[ $1 == "off" ]]; then
  rm -f ~/.openvpn_pid
  exit
else
  openvpn3 session-start --config ~/.ovpn/amaryllis_james@nearamericas.openvpn.com.ovpn
  pgrep openvpn > ~/.openvpn_pid
fi
killall -USR1 i3status
read
