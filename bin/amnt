#!/bin/bash -e

[[ $# != 1 ]] && echo one arg && exit

point="${1%/}"
mount=`mount | grep "${point}" | sed 's/^\([^ ]*\).*/\1/'`

[[ -z "${mount}" ]] && echo mount point not found && exit

sudo umount "${point}"
sudo mkdir "${point}"
sudo mount -t vfat "${mount}" "${point}" -o async,umask=000,uid=james
